<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="item_form">
        <%= render 'shared/item_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Bocs Agregados</h3><br>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Bienvenido a Bocs!</h1>

    <h2>
      Nosotros resolvemos ese trámite que no tienes tiempo de hacer!
    </h2>

    <%= link_to "Regístrate ahora!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>

<% end %>
